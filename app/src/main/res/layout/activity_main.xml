<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background= "#197321">


    <ImageView
        android:id="@+id/avatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circular_shape"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/name"
        android:layout_width="250dp"
        android:layout_height="49dp"
        android:fontFamily="@font/baloo"
        android:inputType="text"
        android:text="Nguyễn Văn A"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/manager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar"
        app:layout_constraintVertical_bias="0.056" />

    <FrameLayout
        android:id="@+id/manager"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/rounded_background"
        app:layout_constraintBottom_toTopOf="@id/tab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintVertical_bias="0.273"
        tools:ignore="ExtraText">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/btn_schedule"
            android:layout_margin="35dp"
            android:background="@drawable/gradient_background_purple"
            android:fontFamily="@font/baloo"
            android:text="Lịch đặt"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:drawableTop="@drawable/icon_schedule"
            android:drawablePadding="8dp"
            android:padding="14dp"
            android:foreground="?attr/selectableItemBackground"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/btn_stadium"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/gradient_background_blue"
            android:fontFamily="@font/baloo"
            android:text="Sân"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:drawableTop="@drawable/icon_stadium"
            android:drawablePadding="8dp"
            android:padding="14dp"
            android:foreground="?attr/selectableItemBackground"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/btn_revenue"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/gradient_background_yellow"
            android:fontFamily="@font/baloo"
            android:text="Doanh thu"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:drawableTop="@drawable/icon_revenue"
            android:drawablePadding="8dp"
            android:padding="14dp"
            android:foreground="?attr/selectableItemBackground"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/btn_time"
            android:layout_margin="190dp"
            android:background="@drawable/gradient_background_red"
            android:fontFamily="@font/baloo"
            android:text="Khung giờ"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:drawableTop="@drawable/icon_time"
            android:drawablePadding="8dp"
            android:padding="14dp"
            android:foreground="?attr/selectableItemBackground"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/tab"
        android:layout_width="310dp"
        android:layout_height="86dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manager"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Trang chủ"
            android:textSize="15sp"
            app:icon="@drawable/ic_home"
            app:iconGravity="top"
            app:iconSize="35dp"
            app:iconTint="@color/white" />

        <Button
            android:id="@+id/btn_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Tài khoản"
            android:textSize="15sp"
            app:icon="@drawable/ic_account"
            app:iconGravity="top"
            app:iconSize="35dp"
            app:iconTint="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


